# $Id: .configure_coq_validation,v 1.1 2008-12-18 13:25:45 weis Exp $

# Edit the user's .coqrc file to give coq access to zenon specific libraries.

. ./.config_var

add_path_to_zenon_lib () {
  echo "Adding coqc proof checks for your Zenon generated proofs to $COQRC."
  echo >> $COQRC <EOF
Add LoadPath $PATH_TO_ZENON_LIB
EOF
}

echo "Do you want to check the proofs using coqc <yes/no> [yes] ?";
read use_coqc

case $use_coqc in
  n* | N*)
   echo "Proofs will not be checked using coqc. Check them by yourself!"
   ;;
  y* | Y* | o* | O*)
   add_path_to_zenon_lib
   ;;
 *)
  if test -z $use_coqc; then
    add_path_to_zenon_lib
  else
    echo "Cannot understand your answer $use_coqc."
    echo "If you want to check the proofs using coqc run again $0."
  fi
  ;;
esac
