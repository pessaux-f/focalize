BINOBJS = $(BYTOBJS:.cmo=.cmx)

.PHONY: all byt bin clean doc install depend tests

all:: byt bin

byt:: $(BYTOBJS)

bin:: $(BINOBJS)

doc:: $(BYTOBJS)
	$(CAMLDOC) -html -d odoc $(BYTOBJS:.cmo=.ml)

clean::
	$(RM) *.cm* *.o *.out *.vo *.fo *~ .*~ log
	if test -d tests; then \
	  ($(CD) tests; $(MAKE) clean); \
	fi
	if test -d odoc; then \
	  $(RM) odoc/*; \
	fi

depend::
	$(CAMLDEP) $(CAML_COMP_FLAGS) *.mli *.ml > ./.depend

# Only on demand.
tests::
	if test -d tests; then ($(CD) tests; $(MAKE) all); fi

.SUFFIXES: .ml .mli .mll .mly .cmo .cmi .cmx .foc .fo .zv .v .vo

.ml.cmo:
	$(CAMLBYT) -c $<

.mli.cmi:
	$(CAMLBYT) -c $<

.ml.cmx:
	$(CAMLBIN) -c $<

.mly.ml:
	$(CAMLYACC) $<

.mll.ml:
	$(CAMLLEX) $<

.foc.fo .foc.ml .foc.zv:
	$(FOCC) $<

.zv.v:
	$(ZVTOV) -new $<

.v.vo:
	$(COQC) $<

include .depend
