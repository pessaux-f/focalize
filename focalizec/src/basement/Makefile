# $Id: Makefile,v 1.27 2012-11-13 14:02:05 pessaux Exp $

ROOT_DIR=../../..

# Must be defined before including Makefile.common since is used by it.
BYT_OBJS=\
 build_stamp.cmo installation.cmo configuration.cmo handy.cmo\
 location.cmo anti_keyword_conflict.cmo types.cmo\
 files.cmo parsetree_utils.cmo miscHelpers.cmo

include $(ROOT_DIR)/Makefile.common

CAML_INCLUDES =
CAML_FLAGS = -w A-4-9 -warn-error $(WARN_ERROR)

depend:
	$(CAMLDEP) $(CAML_INCLUDES) $(BYT_OBJS:.cmo=.mli) $(BYT_OBJS:.cmo=.ml) > .depend

installation.ml:
	@if test ! -L $@ ; then\
	   echo "Please, run configure first.";\
	fi

build_stamp.ml: .FORCE

.PHONY: .FORCE

.FORCE:
	@echo "(* Do not modify manually. This file is automatically generated" > build_stamp.ml
	@echo "   and not stored in the repository. *)" >> build_stamp.ml
	@echo "let build_stamp = \"" `date` "\" ;;" >> build_stamp.ml


install: # Nothing to install from there.

clean:
	$(RM) *.cm* *.o *.a *.annot *.out *.output *.bin *.byt build_stamp.ml *~ .*~


include .depend
