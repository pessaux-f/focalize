use "basics" ;;

(* Must fail. *)
species A =
  sig x : Self ;
  let y = Self!x ;
end ;;

species B =
  sig y : Self ;
  let x = Self!y ;

  let rec z1 (a) = if true then 42 else Self!z2 (if true then a else 1)
  and     z2 (a) = if true then 24 else Self!z1 (if true then a else 1) ;
end ;;

species C inherits A, B =
  rep = basics#int ;
end ;;
