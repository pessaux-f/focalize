(* Must pass.
   Example showing simple mutually recursive methods. *)

open "basics" ;;

species OddEven =
  representation = basics#int ;

  let cinq : Self = 5 ;

  let rec even (x : Self) =
     if  x =0x 0 then true else odd (pred (x))
  and odd (y : Self) =
     if y =0x 0 then false else even (pred (y)) ;
end ;;

collection COddEven = implement OddEven ; end ;;

let r = COddEven!even (COddEven!cinq) ;;
