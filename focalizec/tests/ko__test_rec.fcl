use "basics" ;;

(* Failure required                                                  *)
(* Example showing an ill-formed species because of mutual recursion *)
(* introduced by inheritance. This is the basic example justifying   *)
(* the dependencies computation on species.                          *)
species A =
  signature x : Self ;
  let y = Self!x ;
end ;;

species B =
  signature y : Self ;
  let x = Self!y ;

  let rec z1 (a) = if true then 42 else Self!z2 (if true then a else 1)
  and     z2 (a) = if true then 24 else Self!z1 (if true then a else 1) ;
end ;;

species C inherits A, B =
  representation = basics#int ;
end ;;
