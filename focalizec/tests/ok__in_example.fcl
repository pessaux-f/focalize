species Bla =
  signature equal : Self -> Self -> bool ;
  property equal_reflexive : all x in Self, !equal (x, x) ;
  theorem equal_reflexive2 : all x in Self, !equal (x, x)
    proof : assumed {* *} ;
end ;;


