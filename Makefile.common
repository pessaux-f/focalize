BIN_OBJS = $(BYT_OBJS:.cmo=.cmx)

.PHONY: all byt bin
.PHONY: clean unconfigure distclean install uninstall
.PHONY: doc depend tests lib

all:: byt bin

byt:: $(BYT_OBJS)

bin:: $(BIN_OBJS)

doc:: $(BYT_OBJS)
	$(MKDIR) odoc
	$(CAML_DOC) $(CAML_INCLUDES) -html -d odoc $(BYT_OBJS:.cmo=.ml)

clean::
	$(RM) *.cm* *.o *.a *.annot *.out *.vo *.fo *~ .*~ log *.mangled *.pfc
	if test -d tests; then \
	  ($(CD) tests; $(MAKE) clean); \
	fi
	if test -d odoc; then \
	  $(RM) odoc/*; \
	fi

unconfigure::
	$(RM) .config_var .depend .done_*

distclean:: clean

depend::
	$(CAML_DEP) *.mli *.ml > ./.depend

# Only on demand.
tests::
	if test -d tests; then ($(CD) tests; $(MAKE) all); fi

.SUFFIXES: .ml .mli .mll .mly .cmo .cmi .cmx .annot .fcl .fo .zv .v .vo
.SUFFIXES: .tex .dvi .ps .pdf .idx

.ml.cmo:
	$(CAML_BYT) -c $<

.mli.cmi:
	$(CAML_BYT) -c $<

.ml.cmx:
	$(CAML_BIN) -c $<

.mly.ml:
	$(CAML_YAC) $<

.mll.ml:
	$(CAML_LEX) $<

.fcl.fo:
	$(FOCALIZEC) $<
.fcl.ml:
	$(FOCALIZEC) $<
.fcl.zv:
	$(FOCALIZEC) $<

.zv.v:
	$(ZVTOV) $<

.v.vo:
	$(COQC) $<

.tex.dvi:
	$(LATEX) $<
	$(MAKE) $(<:.tex=.idx)
	$(LATEX) $<
.tex.idx:
	$(MAKEINDEX) $(<:.tex=.idx)
.dvi.ps:
	$(DVIPS) $<
.dvi.pdf:
	$(DVIPDF) $<

include .depend
