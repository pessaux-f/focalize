# $Id: .configure_distribution,v 1.2 2010-02-10 09:54:19 weis Exp $

# The configuration script to collect various shell variables
# for the project distribution.

PROJECT_CVS_ROOT=`cat ./CVS/Root`
PROJECT_CVS_REPOSITORY=`cat ./CVS/Repository`

sed \
  -e "s,@PROJECT_CVS_ROOT@,$PROJECT_CVS_ROOT," \
  -e "s,@PROJECT_CVS_REPOSITORY@,$PROJECT_CVS_REPOSITORY," \
  <.distribution_var.in >.distribution_var

chmod g+w .distribution_var

