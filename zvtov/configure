#!/bin/sh

#  Copyright 2004 INRIA
#  $Id: configure,v 1.5 2004-10-15 14:31:25 doligez Exp $

bindir=/usr/local/bin
libdir=/usr/local/lib/foc
debug=false

case `hostname` in
  macaque*) debug=true;;
esac

while : ; do
  case $# in 0) break;; esac
  case "$1" in
    -bindir | --bindir)
       bindir=$2
       shift 2
    ;;
    -libdir | --libdir)
       libdir=$2
       shift 2
    ;;
    -debug | --debug)
       debug=true
       shift
    ;;
    *) echo 'usage: ./configure [-bindir <dir>] [-libdir <dir>]' >&2
       exit 2
    ;;
  esac
done

if $debug; then
  debugflags="-g -dtypes"
else
  debugflags=
fi
{
  echo BINDIR="$bindir"
  echo LIBDIR="$libdir"
  echo DEBUGFLAGS="$debugflags"
} >.config_var

echo Configuration summary for zvtov:
cat .config_var
